{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ES5",
      "ES6",
      "ES2018"
    ],
    "experimentalDecorators": true, // Obrigatório para usar Typeorm
    "emitDecoratorMetadata": true, // Obrigatório para usar Typeorm
    "module": "commonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "files": true,
  }
}